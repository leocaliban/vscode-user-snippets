{
	// Place your snippets for html here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log(\"$1\");",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"meta": {
		"prefix": "meta-description",
		"body": [
			"<meta name=\"description\" content=\"$1\" />"
		],
		"description": "Inserir descrição"
	},

	"br": {
		"prefix": "br",
		"body": [
			"<br />"
		],
		"description": "Pular uma linha"
	},

	"php": {
		"prefix": "php",
		"body": [
			"<?php $1 ?>"
		],
		"description": "Abre bloco PHP"
	},

	"js": {
		"prefix": "script",
		"body": [
			"<script type=\"text/javascript\" src=\"$1\"></script>"
		],
		"description": "Bloco javascript"
	},

	"html-base": {
		"prefix": "html-base",
		"body": [
			"<!DOCTYPE html>",
			"<html lang=\"pt-br\">",
			"",
			"<head>",
			"    <meta charset=\"utf-8\" />",
			"    <title>Título da Página</title>",
			"    <meta name=\"description\" content=\" ### \" />",
			"    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">",
			"    <link rel=\"stylesheet\" type=\"text/css\" href=\"#\" />",
			"</head>",
			"",
			"<body>",
			"$1",
			"$2",
			"</body>",
			"",
			"</html>"
		],
		"description": "Código HTML base"
	},

	"comentario-html":{
		"prefix": "comentario-html",
		"body": ["<!-- $1 -->"],
		"description": "Comentário para HTML"
	},

	"ngTemplate": {
		"prefix": "ng-template",
		"body": [
			"<ng-template>",
			"  $1",
			"</ng-template>"
		],
		"description": "Ng Template"
	},
	"routerLinkActive": {
		"prefix": "routerLinkActive",
		"body": [
			"routerLinkActive=$1",
		],
		"description": "routerLinkActive"
	}
}